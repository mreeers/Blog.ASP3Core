@model Post

@*<h2>@Model.Title</h2>
    
*@
<div class="container">
    <div class="post no-shadow">
        @if (!String.IsNullOrEmpty(Model.Image))
        {
            var imagePath = $"/Image/{Model.Image}";
            <img src="@imagePath" width="500">
            <span class="title">@Model.Title</span>
        }
    </div>
    <div class="post-body">
        @Model.Body
    </div>
</div>